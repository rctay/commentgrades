grammar CommentGrades
  rule main
    ( commentedgrade / rest )*
  end

  rule rest
    . / "\n"
  end

  rule commentedgrade
    commentedgradeprefix space*
    (
      componentgrade / commentbody
    )*
    '*/'
  end

  rule commentbody
    !'*/' (. / "\n")
  end

  rule commentedgradeprefix
    '/*' space* 'M:'
  end

  rule componentgrade
    component space* grade <ComponentGrade>
  end

  rule component
    'style' <Component> /
    'design' <Component> /
    'correctness' <Component>
  end

  rule grade
    numeric ( '/' space* numeric )? <Grade>
  end

  rule numeric
    # allow decimal
    '-'? [0-9]+ ( '.' [0-9]+ )? <Numeric>
  end

  rule space
    [\s]
  end
end
